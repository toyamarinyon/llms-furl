{
	"name": "llms-furl",
	"version": "0.1.1",
	"description": "Split llms-full.txt into individual markdown files",
	"type": "module",
	"bin": {
		"llms-furl": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"prepublishOnly": "npm run build",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"format": "biome check --write"
	},
	"keywords": [
		"llms",
		"llms-full",
		"markdown",
		"splitter",
		"ai",
		"docs"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/toyamarinyon/llms-furl"
	},
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "latest",
		"knip": "5.81.0",
		"tsup": "8.5.1",
		"typescript": "5.9.3"
	},
	"peerDependencies": {
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=20"
	}
}
