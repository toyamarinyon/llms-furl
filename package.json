{
	"name": "liffy",
	"version": "0.1.0",
	"description": "Split llms-full.txt into individual markdown files",
	"type": "module",
	"bin": {
		"liffy": "./index.ts"
	},
	"files": [
		"index.ts",
		"src"
	],
	"scripts": {
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"format": "biome check --write"
	},
	"keywords": [
		"llms",
		"llms-full",
		"markdown",
		"splitter",
		"ai",
		"docs"
	],
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "latest",
		"knip": "5.81.0",
		"typescript": "5.9.3"
	},
	"peerDependencies": {
		"typescript": "5.9.3"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
